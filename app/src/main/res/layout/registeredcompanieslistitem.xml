<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Company Name"
                android:id="@+id/companyTextView"
                android:textAppearance="@style/headertextstyle"/>
            <TextView
                android:id="@+id/jobProfileTxtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Profile"
                android:textAppearance="@style/normaltextstyle"/>
          <TextView
            android:id="@+id/jobLocationTxtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Profile"
            android:textAppearance="@style/normaltextstyle"/>
            <TextView
                android:id="@+id/ctcTxtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stipend"
                android:textAppearance="@style/normaltextstyle"/>
            <TextView
                android:id="@+id/dateRegTxtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registered On"
                android:textStyle="italic"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>